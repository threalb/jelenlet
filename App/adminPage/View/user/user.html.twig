<div class=" p-3 m-3 bg-dark border rounded shadow-lg">
    <div class="content">
        <div class="contentHeader">
            <h1 class="text-center bg-dark text-white p-3 rounded">Dolgozók listázása</h1>
        </div>
        <div class="contentBody">
            <table class="table table-dark  table-hover">
                <thead >
                <tr>
                    <th>ID</th>
                    <th>Név</th>
                    <th>Email</th>
                    <th>Beosztás</th>
                    <th>Állapot</th>
                    <th>Műveletek</th>
                <th class="text-center">Jelenélti ív</th>
                </thead>
                <tbody>
                </tr>
                {% for employee in employees %}
                <tr>
                    <td>{{ employee.id }}</td>
                    <td>{{ employee.last_name }} {{ employee.first_name }}</td>
                    <td>{{ employee.email }}</td>
                    <td>{{ employee.name }}</td>
                    <td>{{ employee.status ? 'Aktív': 'Inaktív' }}</td>
                    <td>
                        <a class="btn btn-warning" href="employeeEdit/{{ employee.id }}"> <i class="fa-solid fa-edit"></i>
                            Módosít</a>
                        <a class="btn btn-danger" href="employeeDelete/{{ employee.id }}"> <i class="fa-solid fa-trash"></i>
                            Töröl</a>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-secondary" href="/employeePresenceEdit/{{ employee.id }}"><i class="fa-regular fa-calendar-check"></i>
                            </button>
                    </td>
                    {% endfor %}
                </tr>
                </tbody>
                </tr>
            </table>
        </div>
        <div class="contentFooter">z</div>
    </div>

</div>
